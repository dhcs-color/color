<div class="dashboard">

  <h1>
    Hello, <%= current_user.name %>!
  </h1>

  <%= link_to "Sign out", signout_path, id: "sign_out" %>

  <%= link_to "games/new", id: 'new_game' do %>
    <button>
      Start a new game!
    </button>
  <% end %>

  <% unless @not_accepted_games.nil? %>
    <ul class="invitation-games">
      <% @not_accepted_games.each do |game| %>
        <li>
          <%= link_to 'home#accepted' do %>
            <div class="friend-image">
              <%= image_tag (game.from_user.image + "?height=200") %>
            </div>
            <div class="game-text">
              <h3><%= game.from_user.name %></h3>
              <h4>invited you to play</h4>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <ul class="current-games">
    <% for i in 0..2 %>
    <li>hi</li>
    <% end %>
  </ul>

  <ul class="waiting-games">
  <% for i in 0..2 %>
    <li>ho</li>
  <% end %>

  <% unless @waiting_on_friend.nil? %>
    <ul class="invitation-games">
      <% @waiting_on_friend.each do |game| %>
        <li>
          <div class="friend-image">
            <%= image_tag (game.from_user.image + "?height=200") %>
          </div>
          <div class="game-text">
            <h3><%= game.from_user.name %></h3>
            <h4>needs to respond</h4>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
  
</div>