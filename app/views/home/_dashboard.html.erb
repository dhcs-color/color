<div class="dashboard">

  <h1>
    Hello, <%= current_user.name %>!
  </h1>

  <%= link_to "Sign out", signout_path, id: "sign_out" %>

  <%= link_to "games/new", id: 'new_game' do %>
    <button>
      <i class="ss-icon">columns</i>
      <span>New game</span>
    </button>
  <% end %>

  <h2>Game Invitations</h2>

  <% unless @not_accepted_games.nil? %>
    <ul class="completed-challenges">
      <% @not_accepted_games.each do |game| %>
        <%= link_to ("games/" + game.id.to_s) do %>
          <li>
            <%= image_tag (game.from_user.image + "?height=200") %>
            <p>
              <span><%= game.from_user.name %></span>
              invited you to play
            </p>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>

  <h2>Current Games</h2>

  <ul class="respond-to">
    <% for i in 0..2 %>
    <li>hi</li>
    <% end %>
  </ul>

  <h2>Games in Progress</h2>

  <ul class="waiting-from">
    <% for i in 0..2 %>
      <li>ho</li>
    <% end %>
  
</div>